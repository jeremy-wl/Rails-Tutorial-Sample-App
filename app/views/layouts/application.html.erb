<!DOCTYPE html>
<html>
<head>
	<title><%= full_title(@page_title) %></title>  <!-- "full_title" helper is defined in application_helper -->
	<%= csrf_meta_tags %>	<!-- embeded method used for security reasons -->
	<%= render 'layouts/stylesheets' %>
	<%= javascript_include_tag :defaults %>
</head>

<body>
	<div class="container">
		<%= render 'layouts/header' %>
		<% flash.each do |key,value| %>
			<%= content_tag(:div, value, :class => "alert alert-#{key}") %>
		<% end %>
		<section class="round">
			<%= yield %>
		</section>
		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
	</div>

</body>
</html>